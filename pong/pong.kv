#:kivy 1.0.9
<Ball>:
    size: 45,45
    canvas.before:
        Color:
            rgb: 1, 0, 0
        Ellipse:
            position: self.position
            size: self.size
<Game>:
    ball: ball
    
    Ball:
        id: ball
        center: self.parent.center
    Label:
        font_size: 70
        center_x: root.width * 3/4
        top : root.top -50
        text: str("Hello")